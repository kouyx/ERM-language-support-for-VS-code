{
  "name": "erm-language-support",
  "displayName": "ERM Language Support",
  "version": "0.4.0",
  "publisher": "kouyx",
  "description": "Full ERM script support for VS Code (syntax highlight, snippets, comment tools)",
  "icon": "./icons/extension-icon.png",
  "keywords": ["erm", "heroes of might and magic III", "H3.5", "syntax", "snippets"],
  "engines": {
    "vscode": "^1.108.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kouyx/ERM-language-support-for-VS-code.git"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "erm",
        "aliases": ["ERM", "ERM Script"],
        "extensions": [".erm"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/file-icon.svg",
          "dark": "./icons/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "erm",
        "scopeName": "source.erm",
        "path": "./syntaxes/erm.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "erm",
        "path": "./snippets/erm.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "erm-language-support.toggleErmComment",
        "title": "ERM: Toggle Code Comment",
        "category": "ERM"
      },
      {
        "command": "erm-language-support.formatErmInlineComment",
        "title": "ERM: Format Inline Comment",
        "category": "ERM"
      }
    ],
    "keybindings": [
      {
        "command": "erm-language-support.toggleErmComment",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && editorLangId == erm"
      },
      {
        "command": "erm-language-support.formatErmInlineComment",
        "key": "alt+f",
        "mac": "option+f",
        "when": "editorTextFocus && editorLangId == erm"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              "keyword.operator.receiver.erm",
              "entity.name.function.receiver.erm",
              "entity.name.function.instruction.erm",
              "keyword.control.command.erm"
            ],
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": [
              "keyword.operator.receiver.erm"
            ],
            "settings": {
            }
          },
          {
            "scope": [
              "keyword.operator.trigger.erm",
              "keyword.control.header.erm"
            ],
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": [
              "keyword.operator.instruction.erm"
            ],
            "settings": {
              "foreground": "#D7BA7D" 
            }
          },
          {
            "scope": [
              "keyword.control.flow.erm",
              "entity.name.function.custom.erm",
              "variable.other.label.erm"
            ],
            "settings": {
              "foreground": "#C586C0",
              "fontStyle": "bold"
            }
          },
          {
            "scope": [
              "punctuation.section.parens.begin.erm",
              "punctuation.section.parens.end.erm",
              "punctuation.separator.erm",
              "punctuation.terminator.statement.erm",
              "keyword.operator.comparison.erm",
              "keyword.operator.arithmetic.erm",
              "keyword.operator.logical.erm"
            ],
            "settings": {
              "foreground": "#D4D4D4"
            }
          },
          {
            "scope": "keyword.operator.assignment.erm",
            "settings": {
              "foreground": "#FFFFFF"
            }
          },
          {
            "scope": [
              "constant.other.named-constant.erm",
              "constant.character.escape.interpolation.erm",
              "constant.character.escape.erm"
            ],
            "settings": {
              "foreground": "#D7BA7D"
            }
          },
          {
            "scope": [
              "constant.numeric.integer.erm",
              "constant.numeric.trigger-id.erm"
            ],
            "settings": {
              "foreground": "#B5CEA8"
            }
          },
          {
            "scope": [
              "variable.parameter.register.erm",
              "constant.other.symbol.erm"
            ],
            "settings": {
              "foreground": "#4EC9B0"
            }
          },
          {
            "scope": [
              "string.quoted.caret.erm",
              "constant.language.boolean.erm"
            ],
            "settings": {
              "foreground": "#CE9178"
            }
          },
          {
            "scope": [
              "variable.interpolation.erm",
              "variable.other.erm"
            ],
            "settings": {
              "foreground": "#9CDCFE",
              "fontStyle": "italic"
            }
          },
          {
            "scope": [
              "comment.line.erm",
              "comment.inline.erm"
            ],
            "settings": {
              "foreground": "#6A9955",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "keyword.other.todo.erm",
            "settings": {
              "foreground": "#FF6B6B",
              "fontStyle": "bold italic"
            }
          },
          {
            "scope": [
              "entity.name.tag.macro-declaration.erm",
              "entity.name.tag.macro-usage.erm"
            ],
            "settings": {
              "foreground": "#FF79C6",
              "fontStyle": "bold"
            }
          }
        ]
      }
    }
  }
}